<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Halal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryVariant">@color/main_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="font">@font/tthovesregular</item>
        <item name="fontFamily">@font/tthovesregular</item>
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:fontFamily">@font/tthovesregular</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:statusBarColor">@color/main_blue</item>
    </style>

    <style name="FoodTypeButtonActive">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <style name="FoodTypeButtonInactive">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <style name="FoodTypeHaramActiveStyle" parent="FoodTypeButtonActive">
        <item name="android:text">@string/haram</item>
        <item name="android:background">@drawable/ic_active_border_haram</item>
    </style>

    <style name="FoodTypeHaramInactiveStyle" parent="FoodTypeButtonInactive">
        <item name="android:background">@drawable/ic_inactive_border_haram</item>
        <item name="android:text">@string/haram</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="FoodTypeQuestionableActiveStyle" parent="FoodTypeButtonActive">
        <item name="android:text">@string/questionable</item>
        <item name="android:background">@drawable/ic_active_border_questionable</item>
    </style>

    <style name="FoodTypeQuestionableInactiveStyle" parent="FoodTypeButtonInactive">
        <item name="android:background">@drawable/ic_inactive_border_questionable</item>
        <item name="android:text">@string/questionable</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="FoodTypeHalalActiveStyle" parent="FoodTypeButtonActive">
        <item name="android:text">@string/halal</item>
        <item name="android:background">@drawable/ic_active_border_halal</item>
    </style>

    <style name="FoodTypeHalalInactiveStyle" parent="FoodTypeButtonInactive">
        <item name="android:background">@drawable/ic_inactive_border_halal</item>
        <item name="android:text">@string/halal</item>
        <item name="android:textColor">@color/green</item>
    </style>

</resources>